<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="hibernate.POJO.Person" table="person" schema="courseregistration">
        <id name="id">
            <column name="id" sql-type="char(8)" length="8"/>
        </id>
        <property name="name">
            <column name="name" sql-type="varchar(30)" length="30" not-null="true"/>
        </property>
        <property name="birthday">
            <column name="birthday" sql-type="date" not-null="true"/>
        </property>
        <property name="gender">
            <column name="gender" sql-type="int" not-null="true"/>
        </property>
        <property name="role">
            <column name="role" sql-type="char(3)" length="3" not-null="true"/>
        </property>
        <property name="username">
            <column name="username" sql-type="char(20)" length="20" not-null="true"/>
        </property>
        <property name="password">
            <column name="password" sql-type="char(20)" length="20" not-null="true"/>
        </property>
    </class>
</hibernate-mapping>